@model IEnumerable<HastaneProgrami.Models.Entity_Framework.ameliyatOdasi>

@{
    ViewBag.Title = "KAPATILAN AMELİYAT ODALARI";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <div>
        <table id="ameliyatOdasi" class="table table-bordered table-hover text-center">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Eski Ameliyat Odası bulunmamaktadır
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    <i class="fa fa-check-square" aria-hidden="true"></i>
                    @Model.Count() adet eski ameliyat odası bulunmaktadır
                </div>
                <thead>
                    <tr>
                        <th class="text-center">AMELİYAT ODASI ADI</th>
                        <th class="text-center">AMELİYAT ODASI AKTİF ET</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ad)
                            </td>
                            <td>
                                <a class="btn btn-googleplus" href="/AmeliyatOda/AktifEt/@item.ameliyatOdasiID">AKTİF ET</a>
                            </td>
                        </tr>
                    }
                </tbody>
            }
        </table>

        @ViewBag.Hata

        <a class="btn btn-primary" href="@Url.Action("Ekle","AmeliyatOda")">YENİ AMELİYAT ODASI EKLE</a>
    </div>

