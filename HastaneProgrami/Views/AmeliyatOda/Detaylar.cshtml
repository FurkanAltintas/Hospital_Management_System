@using HastaneProgrami.Models.Entity_Framework
@model List<ameliyat>

@{
    ViewBag.Title = "AMELİYAT EDİLEN HASTA";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal">
    <h3>AMELİYAT ODASINDA BULUNAN HASTA</h3>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            Ameliyat bulunmamaktadır
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">HASTA ADI SOYADI</th>
                    <th class="text-center">HASTA TC KİMLİK NO</th>
                    <th class="text-center">HASTA AMELİYAT ODASI</th>
                    <th class="text-center">HASTA AMELİYAT EKİBİ</th>
                    <th class="text-center">HASTA ONAY TARİHİ</th>
                    <th class="text-center">AMELİYAT BAŞLANGIÇ TARİHİ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.hasta.adi @item.hasta.soyadi </td>
                        <td>@item.hasta.TCKimlikNo</td>
                        <td>@item.ameliyatOdasi.ad</td>
                        <td>@item.ameliyatEkip.ad</td>
                        <td>@item.onayTarih</td>
                        <td>@item.ameliyatBaslangicTarih @item.ameliyatBaslangicSaati</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="/AmeliyatOda/Index" class="btn btn-facebook">Geriye Dön</a>
</div>


