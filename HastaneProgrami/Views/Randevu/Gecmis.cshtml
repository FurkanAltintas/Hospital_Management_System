@using HastaneProgrami.Models.Entity_Framework
@model List<randevu>

@{
    ViewBag.Title = "Gecmis";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <table id="gecmisrandevu" class="table table-bordered table-hover text-center">

        @if (Model.Count() == 0)
        {
            <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Randevu bulunmamaktadır
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fa fa-check-square" aria-hidden="true"></i>
                @Model.Count() adet geçmiş randevu bulunmaktadır
            </div>
            <thead>
                <tr>
                    <th class="text-center">HASTA ADI SOYADI</th>
                    <th class="text-center">HASTA TC NO</th>
                    <th class="text-center">HASTANIN DOKTORU</th>
                    <th class="text-center">POLİKLİNİK</th>
                    <th class="text-center">RANDEVU SAATİ</th>
                    <th class="text-center">RANDEVU ALIM TARİHİ</th>
                    <th class="text-center">HASTA DETAY</th>
                    <th class="text-center">HASTA BİLGİ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.hasta.adi  @item.hasta.soyadi</td>
                        <td>@item.hasta.TCKimlikNo</td>
                        <td>@item.personel.adi @item.personel.soyadi</td>
                        <td>@item.poliklinik.ad</td>
                        <td>@item.randevuSaat.ad</td>
                        <td>@item.kayitTarihi</td>
                        <td><a href="/Randevu/Detay/@item.randevuID" class="btn btn-twitter">HASTA DETAY</a></td>
                        <td><a href="/Randevu/Bilgi/@item.randevuID" class="btn btn-instagram">HASTA BİLGİ</a></td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

