@model IEnumerable<HastaneProgrami.Models.Entity_Framework.poliklinik>

@{
    ViewBag.Title = "Gecmis";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <table id="eskipoliklinik" class="table table-bordered table-hover text-center">

        @if (Model.Count() == 0)
        {
            <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Eski Poliklinik bulunmamaktadır
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fa fa-check-square" aria-hidden="true"></i>
                @Model.Count() adet eski poliklinik bulunmaktadır
            </div>
            <thead>
                <tr>
                    <th class="text-center">POLİKLİNİK AD</th>
                    <th class="text-center">POLİKLİNİK DETAY</th>
                    <th class="text-center">POLİKLİNİK AKTİF ET</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ad)
                        </td>
                        <td>
                            <a class="btn btn-twitter" href="/Poliklinik/Detay/@item.poliklinikID">DETAYLAR</a>
                        </td>
                        <td>
                            <a class="btn btn-googleplus" href="/Poliklinik/AktifEt/@item.poliklinikID">AKTİF ET</a>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

