@model HastaneProgrami.Models.Entity_Framework.poliklinik

@{
    ViewBag.Title = "POLİKLİNİK EKLE";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>POLİKLİNİK İŞLEM</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ad, "POLİKLİNİK ADI")
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-university"></i></div>
                @Html.TextBoxFor(m => m.ad, new { @class = "form-control", @maxLength = "50" })
            </div>
            @Html.ValidationMessageFor(m => m.ad, "", new { @style = "color: red" })
        </div>

        <div class="form-group">
            <h4>@ViewBag.Hata</h4>
        </div>

        <div class="form-group">
            <div class="">
                <a href="/Poliklinik/Index" class="btn btn-facebook">GERİYE DÖN</a>
                <button class="btn btn-success">POLİKLİNİK EKLE</button>
            </div>
        </div>
    </div>
}
