@using HastaneProgrami.Models.Entity_Framework
@model List<ameliyatKadro>

@{
    ViewBag.Title = "AMELİYAT EKİBİ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal">
    <h3>@ViewBag.ekip KADROSU</h3>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            @ViewBag.ekip ait personel bulunmamaktadır
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <i class="fa fa-check-square" aria-hidden="true"></i>
            @Model.Count() adet personel bulunmaktadır
        </div>
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">PERSONEL AD SOYAD</th>
                    <th class="text-center">PERSONEL T.C KİMLİK NO</th>
                    <th class="text-center">PERSONEL EKİBE ALINMA TARİHİ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.personel.adi @item.personel.soyadi </td>
                        <td>@item.personel.TCKimlikNo</td>
                        <td>@item.tarih</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="@Url.Action("Index","AmeliyatEkip")" class="btn btn-facebook">Geriye Dön</a>
</div>



