@using HastaneProgrami.Models.Entity_Framework
@model List<ameliyat>

@{
    ViewBag.Title = "AMELİYAT EKİBİ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <table id="ameliyatKadro" class="table table-bordered table-hover text-center">

            <thead>
                <tr>
                    <th class="text-center">AMELİYAT ODASI</th>
                    <th class="text-center">AMELİYAT EKİBİ</th>
                    <th class="text-center">AMELİYAT KADROSU</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ameliyatOdasi.ad</td>
                        <td>@item.ameliyatEkip.ad</td>
                        <td><a href="/Ameliyat/Kadro/@item.ameliyatID" class="btn btn-pinterest">AMELİYAT KADROSU</a></td>
                    </tr>
                }
            </tbody>
    </table>
</div>

