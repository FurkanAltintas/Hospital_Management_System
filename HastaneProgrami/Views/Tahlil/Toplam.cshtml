@using HastaneProgrami.Models.Entity_Framework
@model List<tahlil>

@{
    ViewBag.Title = "Toplam";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal">
    <h3>@ViewBag.hasta'nın Tahlil Bilgileri</h3>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            Hastaya ait tahlil bulunmamaktadır
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <i class="fa fa-check-square" aria-hidden="true"></i>
            @Model.Count() adet tahlil bulunmaktadır
        </div>
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">TAHLİLİ YAPAN PERSONEL</th>
                    <th class="text-center">KAN TÜP ADI</th>
                    <th class="text-center">KAN TÜP MİKTARI</th>
                    <th class="text-center">İDRAR TÜP ADI</th>
                    <th class="text-center">DURUM</th>
                    <th class="text-center">SONUÇ</th>
                    <th class="text-center">AÇIKLAMA</th>
                    <th class="text-center">TAHLİL TARİHİ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.personel.adi @item.personel.soyadi </td>
                        <td>@item.kanTup.ad</td>
                        <td>@item.miktar Tüp</td>
                        <td>@item.idrarTup.ad</td>
                        <td>@item.durum</td>
                        <td>@item.sonuc</td>
                        <td>@Html.Raw(item.aciklama)</td>
                        <td>@item.tarih</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="/Ameliyat/Index" class="btn btn-facebook">Geriye Dön</a>
</div>

