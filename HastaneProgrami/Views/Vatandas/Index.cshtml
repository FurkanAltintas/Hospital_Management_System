@using HastaneProgrami.Models.Entity_Framework
@model List<randevu>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12">
        <div class="white-box">
            <div class="row row-in">

                <div class="col-lg-3 col-sm-6 row-in-br">
                    <div class="col-in row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <i data-icon="E" class="linea-icon linea-basic"></i>
                            <h5 class="text-muted vb">ADI SOYADI</h5>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <h3 class="counter text-right m-t-15 text-danger" style="font-size: 15px;">@ViewBag.d1</h3>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="progress">
                                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%"> <span class="sr-only">100% Complete (success)</span> </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 row-in-br  b-r-none">
                    <div class="col-in row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <i class="linea-icon linea-basic" data-icon="&#xe01b;"></i>
                            <h5 class="text-muted vb">T.C KİMLİK NO</h5>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <h3 class="counter text-right m-t-15 text-megna" style="font-size: 15px;">@ViewBag.d2</h3>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="progress">
                                <div class="progress-bar progress-bar-megna" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"> <span class="sr-only">40% Complete (success)</span> </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6 row-in-br">
                    <div class="col-in row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <i class="linea-icon linea-basic" data-icon="&#xe00b;"></i>
                            <h5 class="text-muted vb">DOĞUM TARİHİ</h5>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <h3 class="counter text-right m-t-15 text-primary" style="font-size: 15px;">@ViewBag.d3</h3>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="progress">
                                <div class="progress-bar progress-bar-primary" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"> <span class="sr-only">40% Complete (success)</span> </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6  b-0">
                    <div class="col-in row">
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <i class="linea-icon linea-basic" data-icon="&#xe016;"></i>
                            <h5 class="text-muted vb">KAN GRUBU</h5>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-6">
                            <h3 class="counter text-right m-t-15 text-success" style="font-size: 15px;">@ViewBag.d4</h3>
                        </div>
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <div class="progress">
                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"> <span class="sr-only">40% Complete (success)</span> </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <br /><br />
            <a href="@Url.Action("RandevuAl","Vatandas")" class="btn btn-googleplus">Hastane Randevusu Al</a>
            <br /><br />

            @if (Model.Count() == 0)
            {
                <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
                    <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                    Aktif Randevunuz bulunmamaktadır
                </div>
            }
            else
            {
                <div class="alert alert-success" role="alert">
                    <i class="fa fa-check-square" aria-hidden="true"></i>
                    @Model.Count() adet randevunuz bulunmaktadır
                </div>
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>POLİKLİNİK ADI</th>
                                <th>POLİKLİNİK HEKİMİ</th>
                                <th>SAAT</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.poliklinik.ad</td>
                                    <td>@item.personel.adi @item.personel.soyadi</td>
                                    <td>@item.randevuSaat.ad</td>
                                </tr>
                            }
                        </tbody>
                    </table>
            }
        </div>
    </div>
</div>

<div class="modal" id="randevuModal2">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 416px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Arama Tipi Seçiniz...</h4>
            </div>
            <form style="text-align:center;">
                <div class="modal-body">
                    <a href="/Randevu/RandevuAl" class="btn btn-primary" style="background: #2c98d3 !important; width: 100%; height: 50px; font-weight: bold; text-overflow: ellipsis; overflow: hidden;"> Genel Arama</a>
                </div>
            </form>
        </div>
    </div>
</div>