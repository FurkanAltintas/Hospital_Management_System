@model IEnumerable<HastaneProgrami.Models.Entity_Framework.personel>

@{
    ViewBag.Title = "ESKİ PERSONELLER";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div>
    <table id="eskipersonel" class="table table-bordered table-hover text-center">

        @if (Model.Count() == 0)
        {
            <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                Eski Personel bulunmamaktadır
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                <i class="fa fa-check-square" aria-hidden="true"></i>
                @Model.Count() adet eski personel bulunmaktadır
            </div>
            <thead>
                <tr>
                    <th class="text-center">PERSONEL AD SOYAD</th>
                    <th class="text-center">PERSONEL POLİKLİNİK</th>
                    <th class="text-center">PERSONEL UNVAN</th>
                    <th class="text-center">KAN GRUBU</th>
                    <th class="text-center">PERSONEL TC. KİMLİK NO</th>
                    <th class="text-center">PERSONEL MAIL</th>
                    <th class="text-center">PERSONEL TELEFON</th>
                    <th class="text-center">PERSONEL DETAY</th>
                    <th class="text-center">PERSONEL AKTİF ET</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.adi) @Html.DisplayFor(modelItem => item.soyadi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.poliklinik.ad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.yetki.yetkiAd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.kanGrubu.kanGrubuAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TCKimlikNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cepTel)
                    </td>
                    <td>
                        <a class="btn btn-twitter" href="/Personel/Detay/@item.personelID">DETAYLAR</a>
                    </td>
                    <td>
                        <a class="btn btn-googleplus" href="/Personel/AktifEt/@item.personelID">AKTİF ET</a>
                    </td>
                </tr>
                }
            </tbody>
        }
    </table>
</div>

