@using HastaneProgrami.Models.Entity_Framework
@model List<muayene>

@{
    ViewBag.Title = "MUAYENE GEÇMİŞİ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal">
    <h3>@ViewBag.hasta Muayene Bilgileri</h3>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            Hastaya ait muayene bulunmamaktadır
        </div>
    }
    else
    {
        <div class="alert alert-success" role="alert">
            <i class="fa fa-check-square" aria-hidden="true"></i>
            @Model.Count() adet muayene bulunmaktadır
        </div>
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">MUAYENEYİ YAPAN PERSONEL</th>
                    <th class="text-center">POLİKLİNİK ADI</th>
                    <th class="text-center">RANDEVU TARİHİ</th>
                    <th class="text-center">RANDEVU SAATİ</th>
                    <th class="text-center">KONU</th>
                    <th class="text-center">AÇIKLAMA</th>
                    <th class="text-center">MUAYENE TARİHİ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.personel.adi @item.personel.soyadi </td>
                        <td>@item.randevu.poliklinik.ad</td>
                        <td>@item.randevu.tarih</td>
                        <td>@item.randevu.randevuSaat.ad</td>
                        <td>@item.baslik</td>
                        <td>@Html.Raw(item.aciklama)</td>
                        <td>@item.tarih</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="/Muayene/Islem" class="btn btn-facebook">Geriye Dön</a>
</div>
