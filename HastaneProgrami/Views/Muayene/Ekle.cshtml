@model HastaneProgrami.Models.Entity_Framework.muayene
@{
    ViewBag.Title = "MUAYENE EKLE";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    CKEDITOR.replace('editor')
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>MUAYENE İŞLEM</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.randevu.hasta.TCKimlikNo, "T.C Kimlik No")
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></div>
                @Html.DropDownListFor(x => x.randevu.hasta.TCKimlikNo, (List<SelectListItem>)ViewBag.randevu, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.randevu.hasta.TCKimlikNo, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.baslik, "Başlık")
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-ticket" aria-hidden="true"></i></div>
                @Html.TextBoxFor(model => model.baslik, new { @class = "form-control" })
            </div>
            @Html.ValidationMessageFor(model => model.baslik, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.aciklama, "Açıklama")
            <div class="input-group">
                <div class="input-group-addon"><i class="fa fa-file" aria-hidden="true"></i></div>
                <textarea name="aciklama" class="ckeditor"></textarea>
            </div>
            @Html.ValidationMessageFor(model => model.aciklama, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <a href="/Muayene/Index" class="btn btn-facebook">Geriye Dön</a>
            <input type="submit" value="KONTROL ET" class="btn btn-success" />
        </div>
    </div>
}