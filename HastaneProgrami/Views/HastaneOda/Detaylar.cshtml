@using HastaneProgrami.Models.Entity_Framework
@model List<ameliyatSonuc>

@{
    ViewBag.Title = "Detaylar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="form-horizontal">
    <h3>HASTANE ODASINDA BULUNAN HASTA</h3>
    <hr />

    @if (Model.Count() == 0)
    {
        <div class="alert alert-danger" style="background: #fb7878; border-color: #fb7878;" role="alert">
            <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
            Hasta bulunmamaktadır
        </div>
    }
    else
    {
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th class="text-center">HASTA ADI SOYADI</th>
                    <th class="text-center">HASTA TC KİMLİK NO</th>
                    <th class="tet-center">ÇIKIŞ</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ameliyat.hasta.adi @item.ameliyat.hasta.soyadi </td>
                        <td>@item.ameliyat.hasta.TCKimlikNo</td>
                        <td><a href="/HastaneOda/Sil/@item.hastaneOdaID" class="btn btn-pinterest">ÇIKIŞ</a></td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a href="@Url.Action("Index","HastaneOda")" class="btn btn-facebook">Geriye Dön</a>
</div>
